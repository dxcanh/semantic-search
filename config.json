{
    "name": "Mnist_LeNet",
    "n_gpu": 1,

    "arch": {
        "type": "MSMarcoDataset",
        "args": {}
    },
    "data_loader": {
        "type": "MSMarcoDataset",
        "args": {
            "file_path": "/home/canhdx/workspace/semantic-search/queries/raw_texts/queries.train_corpus.txt",
            "max_seq_length": 512,
            "mlm_probability": 0.15,
            "pad_to_max_length": false,
            "line_by_line": false
        },
        "batch_size": 128,
        "shuffle": true,
        "num_workers": 2
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
